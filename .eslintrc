{
  "parser": "babel-eslint",

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "plugins": [
    "react"
  ],

  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "settings": {
    "react": {
      "version": "16.13.1"
    }
  },

  "env": {
    "browser": true,
    "node": true
  },

  "globals": {
    "document": false
  },

	"rules": {
		"semi": [2, "never"],
    "react/jsx-indent": [2, 2],
    "react/jsx-indent-props": [2, 2]
	}
}

